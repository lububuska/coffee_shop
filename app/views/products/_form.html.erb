<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "Название", class: "field-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="field">
    <%= form.label :description, "Описание", class: "field-label" %>
    <%= form.text_area :description, class: "form-input" %>
  </div>

  <div class="field">
    <%= form.label :price, "Цена", class: "field-label" %>
    <%= form.number_field :price, step: 0.01, class: "form-input" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-new" %>
  </div>
<% end %>
